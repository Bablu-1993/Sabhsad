<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".adminActivityClass.RegisterUser">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar"/>

           <EditText
               android:id="@+id/txtRDate"
               android:hint="Date"
               android:layout_width="match_parent"
               android:layout_height="45dp"
               android:background="@drawable/shape_edittext"
               android:layout_marginTop="50dp"
               app:layout_constraintTop_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>


            <EditText
                android:id="@+id/txtRName"
                android:hint="Name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRDate" />

            <EditText
                android:id="@+id/txtRMobile"
                android:hint="Mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRName"/>


            <EditText
                android:id="@+id/txtREmail"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtRMobile"/>


            <EditText
                android:id="@+id/RAddress"
                android:hint="Address"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtREmail" />


            <EditText
                android:id="@+id/txtMohallah"
                android:hint="Mohallah"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/RAddress"/>


            <EditText
                android:id="@+id/txtWardNo"
                android:hint="WardNo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shape_edittext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMohallah"/>


    <EditText
        android:id="@+id/txtRAadharNo"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWardNo"/>

    <EditText
        android:id="@+id/txtRVoterid"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRAadharNo"/>

    <EditText
        android:id="@+id/txtTehsil"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRVoterid"/>

    <EditText
        android:id="@+id/txtDistrict"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTehsil"/>
    <EditText
        android:id="@+id/txtUserType"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDistrict"/>

    <EditText
        android:id="@+id/txtIMEINumber"
        android:hint="WardNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserType"/>

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="50dp"
       android:text="Register"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/txtIMEINumber"/>


</androidx.constraintlayout.widget.ConstraintLayout>